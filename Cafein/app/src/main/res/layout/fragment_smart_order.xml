                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/nonCoffeeThreeInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />


                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/nonCoffeeOne"
                        android:background="@drawable/blue_circle"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/nonCoffeeOneTxt"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@+id/nonCoffeeOne"
                        android:layout_alignRight="@+id/nonCoffeeOne"
                        android:hint="dkdkdkd"
                        />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/nonCoffeeOne"
                        android:layout_toLeftOf="@+id/nonCoffeeTwoTxt"
                        android:background="@drawable/blue_circle"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/nonCoffeeTwoTxt"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/nonCoffeeTwo"
                        android:layout_alignRight="@+id/nonCoffeeTwo"
                        android:hint="dkdkdkd"
                        />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/nonCoffeeThree"
                        android:layout_toLeftOf="@+id/nonCoffeeThreeTxt"
                        android:background="@drawable/blue_circle"
                        android:text="3"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/nonCoffeeThreeTxt"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/nonCoffeeThree"
                        android:layout_alignRight="@+id/nonCoffeeThree"
                        android:hint="dkdkdkd"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="BAKERY 추천 메뉴"
                    android:textStyle="bold"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/divider"
                        />
                    <ImageView
                        android:id="@+id/bakeryOne"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/bakeryOneInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/bakeryOneInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/divider"
                        />
                    <ImageView
                        android:id="@+id/bakeryTwo"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/bakeryTwoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/bakeryTwoInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/divider"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:id="@+id/bakeryThree"
                        android:layout_width="99dp"
                        android:layout_height="99dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_alignParentRight="true"
                        />
                    <TextView
                        android:id="@+id/bakeryThreeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/bakeryThreeInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />


                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/bakeryOne"
                        android:background="@drawable/blue_circle"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/bakeryOneTxt"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@+id/bakeryOne"
                        android:layout_alignRight="@+id/bakeryOne"
                        android:hint="dkdkdkd"
                        />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/bakeryOne"
                        android:layout_toLeftOf="@+id/bakeryTwoTxt"
                        android:background="@drawable/blue_circle"
                        android:text="2"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/bakeryTwoTxt"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/bakeryTwo"
                        android:layout_alignRight="@+id/bakeryTwo"
                        android:hint="dkdkdkd"
                        />


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".OrderManage">


    <LinearLayout
        android:layout_width="179dp"
        android:layout_marginTop="70dp"
        android:layout_height="279dp"
        android:layout_marginLeft="115dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/orderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문번호 : "
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="번호"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="135dp"
            android:layout_height="198dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="22dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:id="@+id/orderContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/orderListContent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="아직 승인된 주문이 없습니다."
                    android:textSize="10dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/orderCompleteBtn"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="69.5dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:text="완료"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/makeBigButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="19.5dp"
                android:background="@color/colorPrimary"
                android:onClick="onClick"
                android:src="@drawable/ic_fullscreen_black_24dp" />
        </LinearLayout>
    </LinearLayout>







    <TextView
        android:id="@+id/acceptCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="380dp"
        android:clickable="false"
        android:text="00 개"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/acceptLabel"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="접수요망 주문 수 :"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/refuseCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="415dp"
        android:clickable="false"
        android:text="00 개"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거부된 주문 수 :"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/allCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="450dp"
        android:clickable="false"
        android:text="00 개"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/allLabel"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="91dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 주문 수 :"
        android:textSize="18dp"/>



</RelativeLayout>
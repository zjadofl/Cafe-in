<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="179dp"
    android:layout_height="279dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="244dp"
        android:text="@string/order"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="135dp"
        android:background="#ffffff"
        android:layout_height="198dp" android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="22dp" android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="41dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp" android:layout_marginRight="22dp"
        android:id="@+id/scrollView3">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">
            <TextView
                android:text="@string/order"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>

            <TextView
                android:text="아직 승인된 주문이 없습니다."
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:text="완료"
        android:textSize="10dp"
        android:background="#ffffff"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="6dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:background="@color/colorPrimary"
        android:layout_height="30dp"
        android:src="@drawable/ic_fullscreen_black_24dp"
        android:id="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp" app:layout_constraintStart_toEndOf="@+id/button2"
        android:layout_marginLeft="35dp" android:layout_marginStart="35dp" android:layout_marginTop="3dp"
        android:onClick="goOrderExpand"/>
</android.support.constraint.ConstraintLayout>